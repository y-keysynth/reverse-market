.like-link{:id => "like-link-#{item.id}"}
  - if current_user == nil
    .iine__button
      %i.far.fa-bookmark
      #{item.likes.count}
  - elsif current_user.id == item.user.id
    .iine__button
      %i.fas.fa-bookmark.orange
      #{item.likes.count}
  - elsif current_user.likes.find_by(item_id: item.id) 
    = link_to unlike_path(item.id), method: :delete, remote: true do
      .iine__button
        %i.fas.fa-bookmark.yellow
        #{item.likes.count}
  - else
    = link_to like_path(item.id), method: :post, remote: true do
      .iine__button
        %i.far.fa-bookmark
        #{item.likes.count}
